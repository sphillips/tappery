<div class="grid">
	<div class="col-1-1" id="bar-login-container">
		<div id="form-fields">
			<h2>Forgot your password?</h2>

			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div><%= f.label :email, class: 'form-label', id: 'email' %><br />
			  <%= f.email_field :email %></div>

			  <div><%= f.submit "Send Me Reset Password Instructions", class: 'submit', id:'black-submit' %></div>
			<% end %>

			<%= render :partial => "devise/shared/links" %>
		</div>
	</div>
</div>