<div class="grid">
	<div class="col-1-1" id="bar-login-container">
		<div id="form-fields">
		<h1>Sign in</h1>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div><%= f.label :email, class: 'form-label', id: 'email' %><br />
			  <%= f.email_field :email %></div>

			  <div><%= f.label :password, class: 'form-label', id: 'password' %><br />
			  <%= f.password_field :password %></div>

			  <% if devise_mapping.rememberable? -%>

			    <div class='form-label' id="remember-me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  <% end -%>

			  <div><%= f.submit "SIGN IN", class: 'submit', id: 'black-submit' %></div>
			<% end %>

			<%= render :partial => "devise/shared/links" %>
		</div>
	</div>
</div>