<div class="grid">
	<div class="col-1-1" id="bar-registration-container">
		<h1>Register</h1>
			<div id="form-fields">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>	
					<%= devise_error_messages! %>
						
						<%= f.label :email, class: 'form-label', id: 'email' %>
							<br />
						<%= f.email_field :email %>
							<br />
						<%= f.label :password, class: 'form-label', id: 'password' %>
							<br />
						<%= f.password_field :password %>
							<br />
						<%= f.label :password_confirmation, class: 'form-label', id: 'password' %>
							<br />
						<%= f.password_field :password_confirmation %>
							<br />
						<div id="submit"><%= f.submit "SIGN UP", class: 'submit', id: 'sign-up' %></div>

					<% end %>

						<%= render :partial => "devise/shared/links" %>

				</form>
			</div>
	</div>
</div>
						


